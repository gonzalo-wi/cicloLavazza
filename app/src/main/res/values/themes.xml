<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CicloCafe" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coffee_primary</item>
        <item name="colorPrimaryVariant">@color/coffee_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coffee_accent</item>
        <item name="colorSecondaryVariant">@color/coffee_primary_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/coffee_background</item>
        <item name="colorSurface">@color/coffee_surface</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CicloCafe.NoActionBar" parent="Theme.CicloCafe">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CicloCafe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CicloCafe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>