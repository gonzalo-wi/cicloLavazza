<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/coffee_background"
    tools:context=".ui.reparto.RepartoFragment">

    <ImageView
        android:id="@+id/imgReparto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Reparto"
        android:src="@drawable/ic_reparto"
        android:tint="@color/coffee_primary"
        app:layout_constraintBottom_toTopOf="@+id/textViewRepartoTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewRepartoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Número de Reparto"
        android:textColor="@color/coffee_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewRepartoSubtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgReparto" />

    <TextView
        android:id="@+id/textViewRepartoSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Ingrese el número de reparto para continuar"
        android:textColor="@color/coffee_text_secondary"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/inputLayoutReparto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRepartoTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayoutReparto"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:hint="Número de Reparto"
        app:boxStrokeColor="@color/coffee_primary"
        app:hintTextColor="@color/coffee_primary"
        app:startIconDrawable="@drawable/ic_reparto"
        app:startIconTint="@color/coffee_primary"
        app:layout_constraintBottom_toTopOf="@+id/btnContinuar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewRepartoSubtitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editNumeroReparto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="16dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/coffee_text_primary"
            android:gravity="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinuar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Continuar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/coffee_primary"
        app:icon="@android:drawable/ic_menu_send"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutReparto" />

</androidx.constraintlayout.widget.ConstraintLayout>
