<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <solid android:color="#40000000"/>
        </shape>
    </item>

    <!-- BotÃ³n principal con gradiente -->
    <item
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:angle="90"
                android:startColor="@color/coffee_primary_light"
                android:endColor="@color/coffee_primary"
                android:type="linear"/>
        </shape>
    </item>
</layer-list>

